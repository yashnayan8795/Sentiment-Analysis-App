# Next.js Application Environment Variables
# Copy this file to .env.local and update the values

# FastAPI Backend URL
NEXT_PUBLIC_BACKEND_URL=http://localhost:8000

# MongoDB Connection (move from hardcoded in backend/main.py)
MONGODB_URI=your-mongo-db-url here

# Upstash Redis Configuration (for rate limiting)
UPSTASH_REDIS_REST_URL=your_redis_url_here
UPSTASH_REDIS_REST_TOKEN=your_redis_token_here

# API Configuration
API_RATE_LIMIT=100
API_KEY=your_api_key_here

# PowerBI Configuration (Optional)
POWERBI_CLIENT_ID=your_powerbi_client_id
POWERBI_CLIENT_SECRET=your_powerbi_client_secret
POWERBI_TENANT_ID=your_tenant_id
